<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="2sp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/main_widget_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:src="@drawable/activity_round_corner" />

    <LinearLayout
        android:id="@+id/widget_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="15sp"
        android:paddingVertical="10sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10sp"
            android:gravity="center"
            android:minWidth="35sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="ПР"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/activity_cabinet"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_medium"
                android:maxWidth="50sp"
                android:text="А-105"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_medium"
            android:maxWidth="220dp"
            android:maxLines="2"
            android:text="Ntest ntest www western example 1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3sp"
            android:gravity="center_horizontal|end"
            android:minWidth="50sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:minWidth="50sp"
                android:text="@string/example_start_activity"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/activity_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:minWidth="50sp"
                android:text="@string/example_end_activity"
                android:textAlignment="viewEnd"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>


