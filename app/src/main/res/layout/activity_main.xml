<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:visibility="visible"
    app:layout_constraintWidth_percent="0.3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/string_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5sp"
        android:fontFamily="@font/montserrat_medium"
        android:shadowColor="@color/white_shadow"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="6"
        android:text="@string/logo"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:fillViewport="true"
        android:gravity="center"
        android:isScrollContainer="true"
        android:orientation="horizontal"
        android:overScrollMode="always"
        android:persistentDrawingCache="scrolling"
        android:scrollbars="none"
        android:verticalScrollbarPosition="left"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/string_logo">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:duplicateParentState="false"
            android:listSelector="@null"
            android:orientation="horizontal"
            android:paddingStart="10sp"
            android:paddingEnd="10sp">

            <TextView
                android:id="@+id/day1"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_margin="10sp"
                android:background="@drawable/day_of_week_round_corner"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:onClick="changeCurrentWeek"
                android:shadowColor="#DA0E0E"
                android:text="@string/day1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/day2"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_margin="10sp"
                android:background="@drawable/day_of_week_round_corner"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:onClick="changeCurrentWeek"
                android:shadowColor="#DA0E0E"
                android:text="@string/day2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/day3"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_margin="10sp"
                android:background="@drawable/day_of_week_round_corner"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:onClick="changeCurrentWeek"
                android:shadowColor="#DA0E0E"
                android:text="@string/day3"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/day4"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_margin="10sp"
                android:background="@drawable/day_of_week_round_corner"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:onClick="changeCurrentWeek"
                android:shadowColor="#DA0E0E"
                android:text="@string/day4"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/day5"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_margin="10sp"
                android:background="@drawable/day_of_week_round_corner"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:onClick="changeCurrentWeek"
                android:shadowColor="#DA0E0E"
                android:text="@string/day5"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/day6"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_margin="10sp"
                android:background="@drawable/day_of_week_round_corner"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:onClick="changeCurrentWeek"
                android:shadowColor="#DA0E0E"
                android:text="@string/day6"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/day7"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_margin="10sp"
                android:background="@drawable/day_of_week_round_corner"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:onClick="changeCurrentWeek"
                android:shadowColor="#DA0E0E"
                android:text="@string/day7"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textIsSelectable="false" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_marginStart="5dp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_round_corner"
        android:padding="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <ListView
            android:id="@+id/listView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>