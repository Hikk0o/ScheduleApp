<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootEditActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="horizontal"
    android:paddingBottom="8sp">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/SwipeLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="5sp"
            android:paddingEnd="0sp">

            <LinearLayout
                android:id="@+id/buttonDeleteActivity"
                android:layout_width="100sp"
                android:layout_height="0dp"
                android:background="@drawable/buttom_red_corner"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginVertical="52sp"
                    android:contentDescription="@string/cancel"
                    android:src="@drawable/ic_baseline_delete_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@android:color/white" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_round_corner"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10sp">

                    <Spinner
                        android:id="@+id/edit_activity_type_spinner"
                        style="@style/spinner_style"
                        android:layout_width="85sp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:contentDescription="@string/app_main_button"
                        android:minHeight="48dp"
                        android:spinnerMode="dropdown"
                        android:textAlignment="center"
                        tools:ignore="TouchTargetSizeCheck,RedundantDescriptionCheck" />

                    <AutoCompleteTextView
                        android:id="@+id/ActivityNameAutoCompleteText"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/dark_gray"
                        android:completionThreshold="0"
                        android:dropDownWidth="150sp"
                        android:fontFamily="@font/montserrat_medium"
                        android:hint="@string/activity_name_AutoCompleteText"
                        android:inputType="textMultiLine"
                        android:minHeight="48dp"
                        android:scrollHorizontally="false"
                        android:textColor="@color/white"
                        android:textColorHint="#9E9E9E"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="10sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="8sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edit_activity_start_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/activity_create_start_time"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/input_time_start_of_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5sp"
                            android:layout_weight="1"
                            android:autofillHints="10:30"
                            android:backgroundTint="@color/dark_gray"
                            android:defaultFocusHighlightEnabled="false"
                            android:ems="3"
                            android:focusableInTouchMode="true"
                            android:inputType="time"
                            android:maxLength="5"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textColorHint="#9E9E9E"
                            tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="8sp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edit_activity_end_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/activity_create_end_time"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/input_time_end_of_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5sp"
                            android:layout_weight="1"
                            android:autofillHints="10:30"
                            android:backgroundTint="@color/dark_gray"
                            android:defaultFocusHighlightEnabled="false"
                            android:ems="3"
                            android:inputType="time"
                            android:maxLength="5"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textColorHint="#9E9E9E"
                            tools:ignore="TouchTargetSizeCheck" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </com.daimajia.swipe.SwipeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>